    "import cv2\n",
    "lena = cv2.imread(\"../images/lena.bmp\")\n",
    "cv2.imshow(\"demo1\", lena)\n",
    "cv2.imshow(\"demo2\", lena)\n",
    "cv2.waitKey()"
   ]
